@model IEnumerable<WebBanThu.Areas.Admin.Models.Product_Bill>

@{
    ViewData["Title"] = "Xem Chi Tiet Hoa Don";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xem Chi Tiết Hoá Đơn</h1>

<table class="table">
    <thead>
        <tr>
   
            <th>
                Tên Sản Phẩm
            </th>
           
            <th>
                Giá
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
    
            <td>
                @Html.DisplayFor(modelItem => item.Tittle)
            </td>

            
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            
        </tr>
}
    </tbody>
</table>
